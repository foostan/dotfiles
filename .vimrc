set nocompatible

set mouse=a
set number
set wrap
set title
set shortmess+=I
set showmode
set scrolloff=5
set browsedir=buffer
set nobackup
set nowritebackup
set noswapfile
set wildmode=list:longest,full
set history=1000
set complete+=k
set ruler
set laststatus=2
set showcmd

set tabstop=4 shiftwidth=4 softtabstop=0
set noexpandtab
set modeline
set modelines=2
set clipboard+=unnamed
set showmatch

syntax enable
set autoindent
set smartindent

nnoremap [ %
nnoremap ] %

set paste
let php_folding=1 

colorscheme desert
